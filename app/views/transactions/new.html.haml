                  %table.table.table-user-information
                    %tbody
                      / %tr
                      /   %td Department:
                      /   %td Programming
                      / %tr
                      /   %td Hire date:
                      /   %td 06/23/2013
                      %tr
                        %td Producto
                        %td
                          = select_tag :product_id, options_for_select([['mensual $5.000', 1]])
                      %tr
                        %td Banco
