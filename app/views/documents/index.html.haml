.back
  .container
    .row
      .col-md-5.toppad.pull-right.col-md-offset-3
        %a{:href => "edit.html"} Edit Profile
        %a{:href => "edit.html"} Logout
        %br/
        %p.text-info May 05,2014,03:00 pm
      .col-xs-12.col-sm-12.col-md-6.col-lg-6.col-xs-offset-0.col-sm-offset-0.col-md-offset-3.col-lg-offset-3.toppad
        .panel.panel-info
          .panel-heading
            %h3.panel-title Administración de documentos
          .panel-body
            .row
              .col-md-12.col-lg-12
                %tbody
                  %table.table.table-user-information
                    %tr
                      %th user_id
                      %th fecha
                      %th última actualización
                      %th estado
                      - if current_user.account_type == 1
                        %th acciones
                    - @documents.each do |d|
                      %tr
                        %td 
                          = d.user_id
                        %td 
                          = d.created_at
                        %td 
                          = d.updated_at
                        %td
                          = d.status
                        -if current_user.account_type == 1
                          %td
                            %a.btn.btn-sm.btn-primary{"data-original-title" => "modificar", "data-toggle" => "tooltip", :href => "/documents/#{d.id}/edit", :type => "button"}
                              %i.glyphicon.glyphicon-edit 
          .panel-footer
            %a.btn.btn-sm.btn-primary{"data-original-title" => "nueva documentacion", "data-toggle" => "tooltip", :href => "/documents/new",:type => "button"}
              %i.glyphicon.glyphicon-envelope