.back
  .container
    .row
      .col-md-5.toppad.pull-right.col-md-offset-3
        %a{:href => "edit.html"} Edit Profile
        %a{:href => "edit.html"} Logout
        %br/
        %p.text-info May 05,2014,03:00 pm
      .col-xs-12.col-sm-12.col-md-6.col-lg-6.col-xs-offset-0.col-sm-offset-0.col-md-offset-3.col-lg-offset-3.toppad
        .panel.panel-info
          .panel-heading
            %h3.panel-title Documento de acreditación
          .panel-body
            %p.text-center Actualización del estado de la documentación
            .row
              .col-md-12.col-lg-12
                = form_for @document , url: {action: 'update'}, html: {class: 'nifty_form'} do |f|
                  %table.table.table-user-information
                    %tbody
                      / %tr
                      /   %td Department:
                      /   %td Programming
                      / %tr
                      /   %td Hire date:
                      /   %td 06/23/2013
                      %tr
                        %td Nombre
                        %td
                          = f.text_field :name
                      %tr
                        %td Comentario
                        %td 
                          = f.text_field :coment
                      %tr
                        %td Foto
                        %td 
                          %img{:src => "/uploads/#{@document.path}", :style => "width:310px;"}
                      %tr
                        %td Estado
                        %td
                          = select_tag :status, options_for_select([['Rechazado', 'Rechazado'], ['Aprobado', 'Aprobado']])
                      %tr
                        %td Fecha de envío
                        %td
                          = f.text_field :created_at
                      %tr
                        %td 
                          = f.hidden_field :id
                          = f.hidden_field :user_id
                          = f.submit 'Save'
          .panel-footer