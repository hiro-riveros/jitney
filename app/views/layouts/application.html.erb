<!DOCTYPE html>
<html>
<head>
  <title>JitneyWeb</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav ng-controller="LandingController" class="navbar navbar-fixed-top navbar-primary">
    <div class="container">
      <div class="navbar-header">
        <button type="button" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar" class="navbar-toggle collapsed">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a href="#" class="navbar-brand">colectifacil</a>
      </div>
      <div id="navbar" class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <li><a href="#">inicio</a></li>
          <li><a href="#">contacto</a></li>
          <li><a href="#">sobre colectifacil</a></li>
          <li><a href="#">empresas</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li><a ng-click="lunchModal('signup', 'lg')">sign up</a></li>
          <li><a ng-click="lunchModal('signin', 'sm')">sing in</a></li>
          <li><a ng-show="false" class="hidden">sign out</a></li>
        </ul>
      </div>
    </div>
  </nav>
  <div class="container-fluid" ng-controller="LandingController">
    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12 content">
        <%= yield %>      
      </div>
    </div>
  </div>
</body>
</html>
